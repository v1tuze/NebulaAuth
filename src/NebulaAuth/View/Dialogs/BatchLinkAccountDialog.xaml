<UserControl x:Class="NebulaAuth.View.Dialogs.BatchLinkAccountDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:linker="clr-namespace:NebulaAuth.ViewModel.Linker"
             mc:Ignorable="d"
             TextElement.Foreground="{DynamicResource BaseContentBrush}"
             d:DataContext="{d:DesignInstance linker:BatchLinkAccountVM}"
             Background="{DynamicResource WindowBackground}"
             MinWidth="500" MinHeight="400">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="AccountMultiple" Width="24" Height="24" Margin="0,0,10,0"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryContentBrush}" />
                <TextBlock FontSize="18" VerticalAlignment="Center" Foreground="{DynamicResource BaseContentBrush}">
                    Массовая привязка аккаунтов
                </TextBlock>
            </StackPanel>
            <Button Grid.Column="1" Width="30" Height="30" Style="{StaticResource MaterialDesignIconForegroundButton}"
                    HorizontalAlignment="Right" CommandParameter="{StaticResource False}"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                <materialDesign:PackIcon Kind="Close" Width="24" Height="24" Foreground="IndianRed" />
            </Button>
        </Grid>

        <Separator Grid.Row="1" Opacity="0.7" Margin="0,0,0,15" />

        <!-- Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Accounts File -->
                <TextBlock Text="Файл с аккаунтами (обязательно):" Margin="0,0,0,5" FontWeight="Bold" />
                <TextBlock Text="Формат: login:password (каждая строка - один аккаунт)" 
                          FontSize="12" Margin="0,0,0,10" Foreground="{DynamicResource SecondaryContentBrush}" />
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding AccountsFilePath, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             IsReadOnly="True" Margin="0,0,10,0" />
                    <Button Grid.Column="1" Content="Выбрать" Command="{Binding SelectAccountsFileCommand}"
                           Style="{StaticResource MaterialDesignOutlinedButton}" />
                </Grid>

                <!-- Emails File -->
                <TextBlock Text="Файл с почтами (опционально):" Margin="0,0,0,5" FontWeight="Bold" />
                <TextBlock Text="Формат: email:password:imap_server:imap_port" 
                          FontSize="12" Margin="0,0,0,10" Foreground="{DynamicResource SecondaryContentBrush}" />
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding EmailsFilePath, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             IsReadOnly="True" Margin="0,0,10,0" />
                    <Button Grid.Column="1" Content="Выбрать" Command="{Binding SelectEmailsFileCommand}"
                           Style="{StaticResource MaterialDesignOutlinedButton}" />
                </Grid>

                <!-- Mapping File -->
                <TextBlock Text="Файл с сопоставлением (опционально):" Margin="0,0,0,5" FontWeight="Bold" />
                <TextBlock Text="Формат: login:email (сопоставление логина Steam с почтой)" 
                          FontSize="12" Margin="0,0,0,10" Foreground="{DynamicResource SecondaryContentBrush}" />
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding MappingFilePath, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             IsReadOnly="True" Margin="0,0,10,0" />
                    <Button Grid.Column="1" Content="Выбрать" Command="{Binding SelectMappingFileCommand}"
                           Style="{StaticResource MaterialDesignOutlinedButton}" />
                </Grid>

                <!-- Progress -->
                <Separator Margin="0,10,0,10" />
                <TextBlock Text="{Binding StatusText}" FontSize="14" Margin="0,0,0,10" 
                          Foreground="{DynamicResource PrimaryContentBrush}" />
                <ProgressBar Value="{Binding ProcessedAccounts}" Maximum="{Binding TotalAccounts}"
                           Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0,0,0,10" />
                <Grid Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding ProcessedAccounts, StringFormat='Обработано: {0}'}" />
                    <TextBlock Grid.Column="1" Text="{Binding SuccessfulAccounts, StringFormat='Успешно: {0}'}" 
                              Foreground="Green" />
                    <TextBlock Grid.Column="2" Text="{Binding FailedAccounts, StringFormat='Ошибок: {0}'}" 
                              Foreground="Red" />
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Начать обработку" 
                   Command="{Binding StartProcessingCommand}"
                   IsEnabled="{Binding CanStartProcessing}"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="Отмена" 
                   IsEnabled="{Binding IsProcessing}"
                   CommandParameter="{StaticResource False}"
                   Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Margin="5,0,0,0" />
        </Grid>
    </Grid>
</UserControl>

